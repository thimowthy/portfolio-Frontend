{
  "extends": ["next/core-web-vitals"],
  "ignorePatterns": ["**/docs"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "no-console": "warn",
    "object-curly-spacing": ["warn", "always"],
    "no-multi-spaces": "warn",
    "array-bracket-spacing": ["warn", "never"],
    "no-await-in-loop": "warn",
    "comma-spacing": ["error", { "before": false, "after": true }]
  }
}
