{
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": [
    "react",
    "@next/next",
    "prettier"
  ],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "prettier/prettier": "warn",
    "max-len": ["error", { "code": 100 }], // Por exemplo, limitar a 80 caracteres
    "no-console": "warn"
  }
}
